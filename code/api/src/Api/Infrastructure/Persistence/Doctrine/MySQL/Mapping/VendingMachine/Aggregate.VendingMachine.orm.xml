<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Api\Domain\VendingMachine\Aggregate\VendingMachine" table="vending_machine">
        <id name="id" type="vending_machine_id" />

        <one-to-many field="items" target-entity="Api\Domain\VendingMachine\Aggregate\Item" mapped-by="vendingMachine" fetch="EAGER" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>

        <one-to-many field="coins" target-entity="Api\Domain\VendingMachine\Aggregate\Coin" mapped-by="vendingMachine" fetch="EAGER" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
